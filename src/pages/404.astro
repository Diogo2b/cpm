---
import { Button, Container, TextCardSection } from '@components/odyssey-theme';
import Layout from '../layouts/Page.astro';

const seo = {
	title: 'Page introuvable | Corse Pose Menuiserie',
	description: 'La page que vous recherchez est introuvable. Retournez à l’accueil de Corse Pose Menuiserie.',
};
---

<Layout {seo}>
	<Container>
		<TextCardSection>
			<h1>404</h1>
			<h2>Page introuvable</h2>
			<p>La page demandée n’existe plus ou a été déplacée.</p>
			<div class="cta-buttons__container">
				<Button href="/">Retour à l’accueil</Button>
			</div>
		</TextCardSection>
	</Container>
</Layout>

<style>
	.cta-buttons__container {
		display: flex;
		flex-wrap: wrap;
	}
	.cta-buttons__container :global(a) {
		margin-right: 1rem;
		margin-bottom: 1rem;
	}
	.code-buttons__container {
		margin: 1rem auto;
		display: flex;
		flex-wrap: wrap;
	}
	.code-buttons__container > a {
		margin-right: 1rem;
		margin-bottom: 1rem;
	}
</style>
